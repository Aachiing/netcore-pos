@using Sales_Inventory.Models.DTO;
@model IEnumerable<OrderDetailsDTO>;

<div class="row pt-3">
    <div class="col-md-12">
        <div class="col-md-2 float-start pb-3">
            <input type="text" class="form-control float-end col-2" id="txt-search" placeholder="Search" />
        </div>
        <div class="col-md-2 float-start pb-3 px-2">
            <input type="button" class="btn btn-secondary" id="txt-search" value="Search OR" />
        </div>
        <table class="table table-bordered table-striped" id="tblCashReturn">
            <thead>
                <tr>
                    <th>Item Name</th>
                    <th>Item Code</th>
                    <th>Original Qty</th>
                    <th>Unit Price</th>
                    <th>Return Qty</th>
                    <th>Amount Return</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    foreach (var item in Model)
                    {
                        <tr class="@item.order_id">
                            <td>@item.item_name</td>
                            <td>@item.barcode</td>
                            <td>@item.quantity</td>
                            <td>@item.unit_price</td>
                            <td>@item.return_qty</td>
                            <td>0.00</td>
                            <td style="width:10%">
                                <div class="row">
                                    <div class="col-lg-12 pb-1">
                                        <button type="button" class="btn btn-success btn-sm col-12" id="btn-return" onclick="ReturnItem(@item.order_id)">
                                            <i class="fa-solid fa-pen-to-square"></i>   Return
                                        </button>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="text-center">No Data Available</td>
                    </tr>
                }
            </tbody>
        </table>
        <nav>
            <ul class="pagination justify-content-end">
                <button type="button" class="btn btn-secondary" onclick="ProcessReturn()">Process</button>
            </ul>
        </nav>
    </div>
</div>