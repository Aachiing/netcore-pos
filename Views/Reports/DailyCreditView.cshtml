@{
    ViewData["Title"] = "Daily Credit Sales Report";
}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="row pb-5">
                    <div class="col-md-2">
                        Date From
                        <input type="date" class="form-control" id="dateFrom" />
                    </div>
                    <div class="col-md-2">
                        Date To
                        <input type="date" class="form-control" id="dateTo" />
                    </div>
                    <div class="col-md-2  pt-4">
                        <input type="button" class="btn btn-secondary" id="btnGenerate" value="Generate" />
                    </div>
                </div>
                <div class="row pb-2">
                    <div class="col-md-12">
                        <iframe name="myIframe" id="myIframe" width="100%" height="750px" src="" style="border: 1px solid black"></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            ActiveMenu("liDailyCreditReports");

            $("#btnGenerate").on('click', function () {
                $.ajax({
                    url: "daily-credit/" + $("#dateFrom").val() + "/" + $("#dateTo").val(),
                    type: "GET",
                    success: function (response) {
                        $("#myIframe").attr("src", response.response)
                    },
                    failure: function (response) {
                        alert(response);
                    }

                });
            });
        });
    </script>
}
