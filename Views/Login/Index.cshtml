@model Sales_Inventory.Models.DTO.UserDTO
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/sidebar.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
</head>
@if (TempData["AlertMessage"] == "user not found")
{
    <script>
        alert("Incorrect Username or Password");
    </script>
}
<body class="p-5" style="background-image: linear-gradient(195deg,#42424a,#191919);">
    <form asp-controller="users" asp-action="login" method="POST">
        <div class="row">
            <div class="col d-flex justify-content-center">
                <div class="col-md-3">
                    <div class="card">
                        <div class="card-body">

                            <div class="row mb-5">
                                <img src="~/img/company-logo.png" />
                            </div>

                            <div class="row mb-3">
                                <h3 class="text-center">
                                    <b>Login to account</b>
                                </h3>
                            </div>
                            <div class="col d-flex justify-content-center mb-3">
                                <div class="col-md-11">
                                    <div class="form-group">
                                        <input asp-for="user_name" class="form-control" style="border-radius:10px" placeholder="Username" />
                                        <span class="text-danger" asp-validation-for="user_name"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="col d-flex justify-content-center mb-3">
                                <div class="col-md-11">
                                    <div class="form-group">
                                        <input type="password" asp-for="password" class="form-control" style="border-radius:10px" placeholder="Password" />
                                        <span class="text-danger" asp-validation-for="password"></span>
                                    </div>

                                </div>
                            </div>

                            <div class="col d-flex justify-content-center">
                                <div class="col-md-11 mb-5">
                                    <button type="submit" style="border-radius:10px" class="btn btn-warning col-12">Login</button>
                                </div>
                            </div>

                            <div class="row">
                                <span class="text-center">
                                    &copy; Copyright @DateTime.Now.Year
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            $('input').attr('autocomplete', 'off');
        })
    </script>
}