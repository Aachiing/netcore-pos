@using Sales_Inventory.Models.DTO;
@model PaginationDTO<ProductDTO>;


<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Item Name</th>
            <th>Item Code</th>
            <th>Barcode</th>
            <th>Brand</th>
            <th>Unit</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.item_list.Count() > 0)
        {
            foreach (var item in Model.item_list)
            {
                <tr>
                    <td>@item.product_name</td>
                    <td>@item.product_code</td>
                    <td>@item.barcode</td>
                    <td>@item.brand</td>
                    <td>@item.unit</td>
                    <td>@item.quantity</td>
                    <td>@item.price</td>
                    <td style="width:9%">
                        <div class="row">
                            <div class="col-lg-12 pb-2">
                                <button type="button" class="btn btn-success btn-sm col-12" onclick="GetById(@item.product_id)">
                                    <i class="fa-solid fa-pen-to-square"></i>   Add Quantity
                                </button>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<nav>
    <ul class="pagination justify-content-end">
        <li class="page-item disabled">
            <a class="page-link" href="#" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>
        @for (int i = 1; i <= Model.page_count; i++)
        {
            <li class="page-item @(i == ViewBag.Page ? "active" :"")"><a class="page-link" onclick="PaginationClick(@i)">@i</a></li>
        }
        <li class="page-item disabled">
            <a class="page-link" href="#" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
    </ul>
</nav>

